[colors]
background = #282A2E
foreground = #C5C8C6
primary = #F0C674
secondary = #285577
highlight = #FFFFFF
alert = #900000
disabled = #888888

[bar/default]
width = 100%
height = 1.8%
bottom = true
monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-right = 1

module-margin = 1

separator = |
separator-foreground = ${colors.disabled}

font-0 = FontAwesome:size=9;1
font-1 = DejaVu:Sans:size=9;1
font-2 = NotoColorEmoji:size=9;1

modules-left = i3
;modules-center = xwindow
modules-right = wlan vpn-dev vpn-prod backlight pulseaudio battery date

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

tray-position = right

[module/i3]
type = internal/i3

label-focused-underline = ${colors.primary}
label-focused-background = ${colors.secondary}
label-focused-foreground = ${colors.highlight}
label-unfocused-foreground = ${colors.disabled}
label-visible-foreground = ${colors.highlight}
label-urgent-background = ${colors.alert}

label-separator = "|"
label-focused-padding = 2
label-unfocused-padding = 2
label-visible-padding = 2
label-urgent-padding = 2

index-sort = true

pin-workspaces = true

[module/xwindow]
type = internal/xwindow

[module/backlight]
type = internal/backlight

card = intel_backlight
enable-scroll = true

format = <ramp> <label>
label = %percentage%%

ramp-foreground = ${colors.primary}
ramp-0 = 🌕
ramp-1 = 🌔
ramp-2 = 🌓
ramp-3 = 🌒
ramp-4 = 🌑

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%


format-muted-prefix = "🔇 "
format-muted-prefix-foreground = ${colors.primary}
format-muted = <label-muted>
label-muted = %percentage%%

ramp-volume-foreground = ${colors.primary}
ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

format-full-prefix = " "
format-full-prefix-foreground = ${colors.primary}

format-charging-prefix = "⚡"
format-charging-prefix-foreground = ${colors.primary}
format-charging = <ramp-capacity> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

ramp-capacity-foreground = ${colors.primary}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{A3:terminator -x nmtui:}%{F#F0C674}%ifname%%{F#707880}%{A} disconnected

[module/wlan]
inherit = network-base
interface = wlp0s20f3
interface-type = wireless

format-connected-prefix="%{A3:terminator -x nmtui:}%{A} "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %essid% - %signal%%

[module/eth]
inherit = network-base
interface = wwan0
interface-type = wired

format-connected-prefix="%{A3:terminator -x nmtui:}%{A} "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %ifname% %local_ip%

[module/vpn-dev]
type = custom/script
exec = [ -d "/proc/sys/net/ipv4/conf/ppp0" ] && echo "" || echo ""
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/vpn-prod]
type = custom/script
exec = [ -d "/proc/sys/net/ipv4/conf/tun0" ] && echo "" || echo ""
format-prefix = " "
format-prefix-foreground = ${colors.primary}

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d %H:%M:%S
date-alt = %H:%M

format-prefix="%{A3:gnome-calendar:}%{A} "
format-prefix-foreground = ${colors.primary}
label = %date%

[settings]
screenchange-reload = true

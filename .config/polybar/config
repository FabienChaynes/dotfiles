[colors]
background = #282A2E
foreground = #C5C8C6
primary = #F0C674
secondary = #285577
highlight = #FFFFFF
alert = #900000
disabled = #888888

[bar/default]
width = 100%
height = 1.8%
bottom = true
monitor = ${env:MONITOR:}

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

padding-right = 1

module-margin = 1

separator = |
separator-foreground = ${colors.disabled}

font-0 = FontAwesome:size=9;1
font-1 = DejaVu:Sans:size=9;1
font-2 = NotoColorEmoji:size=9;1

modules-left = i3
;modules-center = xwindow
modules-right = wlan vpn-dev vpn-prod backlight pulseaudio battery date

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

tray-position = right

[module/i3]
type = internal/i3

label-focused-underline = ${colors.primary}
label-focused-background = ${colors.secondary}
label-focused-foreground = ${colors.highlight}
label-unfocused-foreground = ${colors.disabled}
label-visible-foreground = ${colors.highlight}
label-urgent-background = ${colors.alert}

label-separator = "|"
label-focused-padding = 2
label-unfocused-padding = 2
label-visible-padding = 2
label-urgent-padding = 2

index-sort = true

pin-workspaces = true

[module/xwindow]
type = internal/xwindow

[module/backlight]
